<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragNewProject"
    android:background="@drawable/book_fragment_background"
    android:padding="30dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvtitle"
                android:layout_margin="10dp"
                android:textSize="25sp"
                android:textColor="#222222"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#333333"
                android:id="@+id/tvdesc"
                android:layout_margin="5dp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/nameactivity"
                android:layout_height="180dp"
                android:id="@+id/nameactivity"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/newproject"
                android:layout_height="180dp"
                android:id="@+id/newproject"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/selectapi"
                android:layout_height="180dp"
                android:id="@+id/selectapi"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/selectscreen"
                android:layout_height="180dp"
                android:id="@+id/selectscreen"
                android:layout_margin="10dp"
                android:scaleType="fitXY"/>
        </LinearLayout>
    </ScrollView>

</FrameLayout>